---
import "../styles/navbar.css";
---

<nav class="bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <img
            loading="lazy"
            class="h-8 w-8 object-cover rounded"
            src="/assets/img/logo_jk.webp"
            alt="Logo"
          />
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a
              href="/"
              class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-base font-medium"
              >Inicio</a
            >
            <a
              href="#"
              class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-base font-medium"
              >Acerca de</a
            >
            <a
              href="#"
              class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-base font-medium"
              >Servicios</a
            >
            <a
              href="#"
              class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-base font-medium"
              >Contacto</a
            >
          </div>
        </div>
      </div>
      <div class="md:hidden group">
        <button
          class="px-2 group-hover:border group-hover:rounded-md group-hover:border-slate-100 button__nav"
        >
          <svg
            class=""
            xmlns="http://www.w3.org/2000/svg"
            height="24"
            width="21"
            viewBox="0 0 448 512"
            ><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.-->
            <path
              fill="#A5A5A5"
              d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
            ></path></svg
          >
        </button>
      </div>
    </div>
  </div>
</nav>
<div class="nav-container"></div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.querySelector(".button__nav");
    const navCont = document.querySelector(".nav-container");
    button.addEventListener("click", function () {
      navCont.classList.toggle("active"); // Alternar la clase "active" para mostrar u ocultar el men√∫
    });
  });
</script>
