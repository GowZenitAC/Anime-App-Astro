---
const { title, image, year, icon, score, type } = Astro.props;
const typeClass = () => {
  switch (type) {
    case "TV":
      return 'bg-rose-500';
    case "Movie":
      return 'bg-sky-500';
    case "OVA":
      return 'bg-yellow-600';
    case "Special":
      return 'bg-green-600';
    case "ONA":
      return 'bg-purple-600';
    case "Music":
      return 'bg-pink-600';
  }
}
---

<div class="flex flex-col justify-center items-center lg:flex lg:flex-col lg:justify-center lg:items-center">
  <div
    class="relative rounded w-42 h-52 border-[3px] sm:w-32 sm:h-52 lg:w-52 lg:h-72 lg:border-[5px] border-neutral-300 shadow-lg"
  >
  <a href="#">
    <div class="absolute inset-0 h-6 lg:h-10 bg-gray-900 bg- bg-opacity-[0.64]"></div>
    <div class=`absolute inset-0 h-5 mt-[182px] text-center text-xs sm:mt-[182px] md:mt-[182px] sm: lg:h-10 ${typeClass()} bg-opacity-[0.70] lg:mt-[238px] text-white font-normal lg:text-center lg:text-lg`>
      {type}
    </div>
    <span class="text-white text-xs mx-8 my-1 sm:text-xs sm:mx-6 sm:my-[1px] md:text-xs md:mx-6 lg:text-base font-bold absolute lg:mx-8 lg:my-2">{score}</span>
    <img src={icon} alt="" class="w-5 h-5 mx-2 sm:w-[14px] sm:h-[14px] sm:mx-1 sm:my-[2px] md:w-[14px] md:h-[14px] md:mx-1 md:my-[2px] lg:w-5 lg:h-5 absolute lg:mx-2 lg:my-2" />
    <figure class="w-full h-full">
      <img src={image} alt={title} class="object-cover w-full h-full" />
    </figure>
  </div>
  <h1 class=" text-xs font-bold text-center mt-1 mb-1 lg:text-xl lg:text-center text-black lg:mt-2 lg:mb-2">{title}</h1>
  <p class="text-black text-xs lg:text-xl font-bold">{year}</p>
</div>
